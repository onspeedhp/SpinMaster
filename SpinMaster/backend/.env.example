# Environment Variables
NODE_ENV=development
PORT=3000

# PostgreSQL Configuration (Railway provides this automatically)
DATABASE_URL=postgresql://user:password@host:port/database


# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_REFRESH_EXPIRES_IN=7d

# Solana Configuration
SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_NETWORK=devnet
TREASURY_WALLET=your_treasury_wallet_public_key

# Spin Packages (in lamports, 1 SOL = 1,000,000,000 lamports)
PACKAGE_10_SPINS_PRICE=100000000
PACKAGE_25_SPINS_PRICE=200000000
PACKAGE_50_SPINS_PRICE=350000000

# Rate Limiting
DAILY_CLAIM_LIMIT=1
SPIN_RATE_LIMIT=100
LOGIN_RATE_LIMIT=5

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
